<idea-plugin version="2">
    <id>com.smilingrob.gitpair</id>
    <name>Git Pair</name>
    <version>1.0</version>
    <vendor email="smilingrob@gmail.com" url="http://smilingrob.com">Robert Wallis</vendor>

    <description><![CDATA[
    See who is paired, and pick your teammates in the GUI.
    Does not depend on or use the git pair plugin.  The only dependency is git.
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <project-components>
        <component>
            <implementation-class>gitpair.GitPairProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>